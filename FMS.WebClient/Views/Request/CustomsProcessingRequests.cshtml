@model RequestListingViewModel;
@{
    ViewData["Title"] = "Customs Processing Requests";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid container-decor text-center">
    <h1>Customs processing</h1>
</div>
<br />

<div class="btn-group btn-group-justified">
    <a href="/Request/CustomsProcessingRequests?page=@Model.PreviousPage" class="float-left btn btn-primary @(Model.PreviousDisabled?"disabled":"")">Prev</a>
    <a href="/Request/CustomsProcessingRequests?page=@Model.NextPage" class="float-right btn btn-primary @(Model.NextDisabled?"disabled":"")">Next</a>
</div>
<br />

<table class="table table-hover">
    <thead>
        <tr>
            <th>Number</th>
            <th>Date create</th>
            <th>From</th>
            <th>To</th>
            <th>Info</th>
            <th></th>
        </tr>
    </thead>
    @foreach (var item in Model.list)
    {
        <tr>
            <td>@item.Number</td>
            <td>@item.DateCreate</td>
            <td>@item.FromCountryCity</td>
            <td>@item.ToCountryCity</td>
            <td>@item.LoadName</td>
            <td>
                <a href="/Document/CreateInvoice?requestID=@item.ID" class="btn bz-btn-info">Invoice</a>
            </td>
        </tr>
    }
</table>