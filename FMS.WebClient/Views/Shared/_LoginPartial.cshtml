@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

    <li class="nav-item">
        <div class="dropdown nav-item">
            <button class="dropdown-toggle" type="button" data-toggle="dropdown">
                My Account
                <span class="caret"></span>
            </button>

            <ul class="dropdown-menu">
                @if (SignInManager.IsSignedIn(User))
                {
                    <li class="nav-item">
                        <a class="nav-link " asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
                    </li>
                    <li class="nav-item">
                        <form class="form-inline" style="position: relative; display: block; padding: 10px 15px; " asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                            <button type="submit" class="btn btn-link" style=" padding: 4px;">Logout</button>
                        </form>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">Register new user</a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link " asp-area="Identity" asp-page="/Account/Login">Login</a>
                    </li>
                }
            </ul>
        </div>
    </li>
